<div class="body">
	<div class="container">
		<p class="notice"></p>
        <p><%= flash[:notice] %></p>
		<h2>User info</h2>
		<%= form_for(@user) do |f| %>
		    <dir class="field">
		    	<label for="user_name">Name</label>
		    	<%= f.text_field :username, class: "name" %>
		    </dir>
		    <div class="field">
		    	<label for="user_image">Image</label>
		    	<%= f.attachment_field :image, class: "user-edit-form user_image" %>
		    </div>
		    <div class="field">
		    	<label for="user-introduction">Introduction</label>
		    	<%= f.text_area :introduction, class: 'introduction', id: 'user-introduction' %>
		    </div>
		    <div class="actions">
		    	<%= f.submit 'Update User', class: "update-user" %>
		    </div>
		<% end %>
	</div>
</div>