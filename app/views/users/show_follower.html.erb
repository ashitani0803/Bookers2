<div class="body">
	<div class="container">
		<div class="row">
			<%= render 'books/list', book: @book, user: @user %>
			<div class="col-xs-9">
				<h2>Followers</h2>
				<table class="table">
					<thead>
						<tr>
							<th>image</th>
							<th>name</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<% @user.followers.each do |user| %>
							<tr>
								<td>
									<%= attachment_image_tag user, :image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
								</td>
								<td>
									 <%= user.username %>
								</td>
								<td>
									<%= link_to 'Show', user_path(user.id), class: "user_#{user.id}" %>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
