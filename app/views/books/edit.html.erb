<div class="body">
	<div class="container">
          <p class="notice"></p>
          <p><%= flash[:notice] %></p>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<h1>Editing Book</h1>
                    <% if @book.errors.any? %>
                      <div id="error_explanation">
                        <h3>
                          <%= I18n.t("errors.messages.not_saved",
                                     count: @book.errors.count,
                                     resource: @book.class.model_name.human.downcase)
                           %>
                        </h3>
                        <ul>
                          <% @book.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                          <% end %>
                        </ul>
                      </div>
                    <% end %>
				<%= form_for(@book) do |f| %>
                    <div class="field row">
                    	<label for="book_title">Title</label>
                    	<%= f.text_field :title, class: "col-xs-12 book_title" %>
                    </div>
                    <div class="field row">
                    	<label for="book_opinion">Opinion</label>
                    	<%= f.text_area :opinion, class: "col-xs-12 book_body" %>
                    </div>
                    <div class="action row">
                    	<%= f.submit 'Update Book',class: "btn btn-primary col-xs-12" %>
                    </div>
				<% end %>
				<%= link_to 'Show', book_path(@book), class: "book_#{@book.id}" %> | <%= link_to 'Back', books_path, class: "back" %>
			</div>
		</div>
	</div>
</div>