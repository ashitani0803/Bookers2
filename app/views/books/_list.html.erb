<div class="col-xs-3">
	<h2>User info</h2>
	<table class="table">
		<tr><%= attachment_image_tag @user, :image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %></tr>
		<tr>
			<th>name</th>
			<th><%= user.username %></th>
		</tr>
		<tr>
			<th>introduction</th>
			<th><%= user.introduction %></th>
		</tr>
	</table>
	<div class="row">
		<%= link_to '', edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
	</div>
	<h2>New book</h2>
	<%= form_for(@book) do |f| %>
		<div class="field row">
			<label for="book_title">Title</label><br>
			<%= f.text_field :title, class: "book_title" %>
		</div>
		<div class="field row">
			<label for="book_opinion">Opinion</label>
			<%= f.text_area :opinion, class: "book_body" %>
		</div>
		<div class="actions row">
			<%= f.submit 'Create Book', class: 'btn btn-primary col-xs-12' %>
		</div>
	<% end %>
</div>
