<div class="body">
	<div class="container">
		<%= form_tag search_path, method: 'get' do %>
			<%= text_field_tag :search, params[:search] %>
			<%= select_tag :search_select, options_for_select([['ユーザー', 'ユーザー'], ['投稿', '投稿']]) %>
			<%= select_tag :search_method, options_for_select([['前方一致', '前方一致'], ['後方一致', '後方一致'], ['完全一致', '完全一致'], ['部分一致', '部分一致']]) %>
			<%= submit_tag 'Search' %>
		<% end %>
	</div>
</div>

<% @users.each do |user| %>
<tr>
	<td>
		 <%= user.username %>
	</td>
	<td>
		<%= link_to 'Show', user_path(user.id), class: "user_#{user.id}" %>
	</td>
</tr>
<% end %>

<% @books.each do |book| %>
<tr>
	<td>
		 <%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %>
	</td>
	<td>
		<%= book.opinion %>
	</td>
</tr>
<% end %>