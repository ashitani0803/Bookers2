<% if user_signed_in? %>
  <% unless book.favorite_user(current_user.id).blank? %>
    <li>
      <%= link_to book_favorite_path(book_id: book.id, id: book.favorites[0].id), class: "fav", method: :delete, remote: true do %>
        <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
        <strong class="favorite_counts"><%= book.favorites_count %></strong>
      <% end %>いいね
    </li>
  <% else %>
    <li>
      <%= link_to book_favorites_path(book.id), class: "fav", method: :post, remote: true do %>
        <i class="fa fa-heart-o" aria-hidden="true"></i>
        <strong class="favorite_counts"><%= book.favorites_count %></strong>
      <% end %>いいね
    </li>
  <% end %>
<% else %>
  <% if book.favorites_count > 0 %>
    <li>
      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
      <strong class="favorite_counts"><%= book.favorites_count %></strong>いいね
    </li>
  <% else %>
    <i class="fa fa-heart-o" aria-hidden="true"></i>
    <strong class="favorite_counts"><%= book.favorites_count %></strong>いいね
  <% end %>
<% end %>